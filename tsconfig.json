{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2017",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./app",
    "module": "esnext",
    "moduleResolution": "bundler",
    "paths": {
      "@/*": [
        "./app/*"
      ],
      "@components/*": [
        "components/*"
      ], // Map "components" to the "components" folder
      "@gen/*": [
        "./gen/*"
      ], // (Optional) Map other directories as needed
      "@styles/*": [
        "./styles/*"
      ], // (Optional) Map other directories as needed
      "@public/*": [
        "../public/*"
      ]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "unusedExpectErrorDirectives": false
}
